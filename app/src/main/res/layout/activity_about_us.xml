<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AboutUs">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_about"
            app:title="Sobre nós"
            app:titleTextColor="#FFFFFF"
            app:navigationIcon="@drawable/back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            />

    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="297dp"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:maxWidth="60dp"
        android:maxHeight="60dp"
        android:scaleType="fitCenter"
        android:layout_marginBottom="240dp"
        android:src="@drawable/fotoproj" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:text="A aplicação QRPanda, foi projetada no âmbito da cadeira de Desenvolvimento de Aplicações Móveis, da Licenciatura em Engenharia Informática, no Instituto Politécnico de Tomar. "
        android:layout_marginTop="160dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textSize="15sp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Desenvolvida pelos alunos:\nFrancisco Melo nº23155\nTomás Silva nº23052"
        android:layout_marginTop="300dp"
        android:textSize="15sp"
        android:layout_marginStart="20dp"
        android:textColor="#000000"
        android:layout_marginEnd="20dp"
        android:layout_gravity="center"
        />

    <ImageView
        android:layout_width="162dp"
        android:layout_height="132dp"
        android:layout_gravity="center"
        android:layout_marginBottom="-520dp"
        android:adjustViewBounds="true"
        android:maxWidth="60dp"
        android:maxHeight="60dp"
        android:scaleType="fitCenter"
        android:src="@drawable/panda" />




</androidx.coordinatorlayout.widget.CoordinatorLayout>